@model EmployeeHistoryApplication.Models.JobHistory
@using EmployeeHistoryApplication.Controllers
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<JobHistoriesController> _localizer;
@{
    ViewData["Title"] = "Create";
}

<h1>@_localizer["CreateString"]</h1>

<h1>@_localizer["JobHistory"]</h1>
<p>@ViewBag.EmployeeName</p>
<p>@ViewBag.EmployeeSurname</p>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="EmployeeId" class="form-control" value="@ViewBag.EmployeeId" />
            </div>
            <div class="form-group">
                <label asp-for="CompanyName" class="control-label"></label>
                @(Html.Kendo().TextBoxFor(m => m.CompanyName).HtmlAttributes(new { @class = "form-control" }))
                <span asp-validation-for="CompanyName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JobPostition" class="control-label"></label>
                @(Html.Kendo().TextBoxFor(m => m.JobPostition).HtmlAttributes(new { @class = "form-control" }))
                <span asp-validation-for="JobPostition" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="dateFrom" class="control-label"></label>
                @(Html.Kendo().DatePicker()
                    .Name("dateFrom")
                    .Format("dd/MM/yyyy")
                    .HtmlAttributes(new { @class = "form-control" })
                    )           
                    <span asp-validation-for="dateFrom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="dateTo" class="control-label"></label>
                @(Html.Kendo().DatePicker()
                    .Name("dateTo")
                    .Format("dd/MM/yyyy")
                    .HtmlAttributes(new { @class = "form-control" })
                    )                <span asp-validation-for="dateTo" class="text-danger"></span>
            </div>
            <div class="form-group">

                @(Html.Kendo().Button()
                    .Name("primaryTextButton")
                    .ThemeColor(ThemeColor.Success)
                    .HtmlAttributes(new { type = "submit" })
                    .Content("Create")
                    )
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Employees" asp-action="Edit" asp-route-id="@ViewBag.EmployeeId">@_localizer["BackToEditEmployee"]</a>
</div>
