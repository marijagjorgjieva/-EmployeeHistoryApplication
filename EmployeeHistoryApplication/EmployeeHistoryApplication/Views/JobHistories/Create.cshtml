@model EmployeeHistoryApplication.Models.JobHistory
@using EmployeeHistoryApplication.Controllers
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<JobHistoriesController> _localizer;

@{
    ViewData["Title"] = "Create";
}

<h1>@_localizer["CreateString"]</h1>

<h1>@_localizer["JobHistory"]</h1>
<p>@ViewBag.EmployeeName</p>
<p>@ViewBag.EmployeeSurname</p>
<hr />
<div class="row">
    <div class="col-md-4">
        <form id="createJobHistoryForm" asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="EmployeeId" class="form-control" value="@ViewBag.EmployeeId" />
            </div>
            <div class="form-group">
                <label asp-for="CompanyName" class="control-label"></label>
                @(Html.Kendo().TextBox()
                    .Name("CompanyName")
                    .HtmlAttributes(new { @class = "form-control" })
                    )
                <span asp-validation-for="CompanyName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JobPostition" class="control-label"></label>
                @(Html.Kendo().TextBox()
                    .Name("JobPostition")
                    .HtmlAttributes(new { @class = "form-control" })
                    )
                <span asp-validation-for="JobPostition" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="dateFrom" class="control-label"></label>
                @(Html.Kendo().DatePicker()
                    .Name("dateFrom")
                    .Format("dd/MM/yyyy")
                    .HtmlAttributes(new { @class = "form-control" })
                    )
                <span asp-validation-for="dateFrom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="dateTo" class="control-label"></label>
                @(Html.Kendo().DatePicker()
                    .Name("dateTo")
                    .Format("dd/MM/yyyy")
                    .HtmlAttributes(new { @class = "form-control" })
                    )
                <span asp-validation-for="dateTo" class="text-danger"></span>
            </div>
            <div class="form-group">
                @(Html.Kendo().Button()
                    .Name("CreateButton")
                    .ThemeColor(ThemeColor.Primary)
                    .Content(_localizer["CreateString"])
                    .HtmlAttributes(new { type = "submit" })
                    )
            </div>
        </form>
    </div>
</div>


<div class="form-group">
    @(Html.Kendo().Button()
        .Name("BackButton")
        .ThemeColor(ThemeColor.Base)
        .Content(_localizer["BackToEditEmployee"])
        .HtmlAttributes(new { type = "button", onclick = "window.location.href='" + Url.Action("Edit", "Employees", new { id = Model.Employee.Id }) + "';" })
        )
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $('#createJobHistoryForm').submit(function(event) {
            var companyName = $("input[name='CompanyName']").val();
            var jobPostition = $("input[name='JobPostition']").val();
            var dateFrom = $("input[name='dateFrom']").val();
            var dateTo = $("input[name='dateTo']").val();

            console.log("Company Name: " + companyName);
            console.log("Job Position: " + jobPostition);
            console.log("Date From: " + dateFrom);
            console.log("Date To: " + dateTo);

            // event.preventDefault();
        });
    </script>
}
