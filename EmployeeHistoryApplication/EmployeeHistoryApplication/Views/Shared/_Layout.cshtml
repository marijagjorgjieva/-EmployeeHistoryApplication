@using System.Globalization
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EmployeeHistoryApplication</title>

    <!-- Stylesheets -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EmployeeHistoryApplication.styles.css" asp-append-version="true" />

   	<link href="https://kendo.cdn.telerik.com/themes/7.0.2/bootstrap/bootstrap-main.css" rel="stylesheet" type="text/css" />


    <script src="https://code.jquery.com/jquery-2.2.1.js"></script>
	<script src="https://cdn.kendostatic.com/2024.4.1112/js/kendo.all.min.js"></script>
	<script src="https://cdn.kendostatic.com/2024.4.1112/js/kendo.aspnetmvc.min.js"></script>
</head>
<body>
    <header>
        <form action="/Culture/SetCulture" method="get">
            <input type="hidden" name="returnUrl" value="@Context.Request.Path" />
            <input type="hidden" name="culture" id="cultureInput" />

            <div>
                <a href="javascript:void(0);" onclick="setCulture('en-GB');"
                   class="@((CultureInfo.CurrentCulture.Name == "en-GB") ? "active" : "")">English</a> |
                <a href="javascript:void(0);" onclick="setCulture('sq-AL');"
                   class="@((CultureInfo.CurrentCulture.Name == "sq-AL") ? "active" : "")">Albanian</a> |
                <a href="javascript:void(0);" onclick="setCulture('mk-MK');"
                   class="@((CultureInfo.CurrentCulture.Name == "mk-MK") ? "active" : "")">Macedonian</a>
            </div>
        </form>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Employee History App</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-controller="Employees" asp-action="Index">List of employees</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; Employee History App - <a asp-area="" asp-controller="Employees" asp-action="Index">List of employees</a>
        </div>
    </footer>

    <script>
        function setCulture(culture) {
            document.getElementById('cultureInput').value = culture;
            document.querySelector('form').submit();
        }
    </script>


    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
