@model EmployeeHistoryApplication.Models.Employee
@using EmployeeHistoryApplication.Controllers
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<EmployeesController> _localizer;

<h1>@_localizer["EmployeeDetails"]</h1>


<div>
    <hr />
    <div>
        <h4>@_localizer["Employee"]</h4>
        <hr />
        <div class="row">
            <div class="col-sm-2">
                @(Html.Kendo().TextBox()
                    .Name("Name")
                    .Label(l => l.Content(_localizer["Name"]))
                    .Value(Model.Name)
                    .HtmlAttributes(new { @class = "form-control" })
                    .Enable(false))
            </div>
        </div>
        <div class="row">
            <div class="col-sm-2">
                @(Html.Kendo().TextBox()
                    .Name("Surname")
                    .Label(l => l.Content(_localizer["Surname"]))
                    .Value(Model.Surname)
                    .HtmlAttributes(new { @class = "form-control" })
                    .Enable(false))

            </div>
        </div>
        <div class="row">
            <div class="col-sm-2">
                @(Html.Kendo().TextBox()
                    .Name("Adress")
                    .Label(l => l.Content(_localizer["Add"]))
                    .Value(Model.Adress)
                    .HtmlAttributes(new { @class = "form-control" })
                    .Enable(false))
            </div>
        </div>
        <div class="row">
            <div class="col-sm-2">
                @(Html.Kendo().TextBox()
                    .Name("EMBG")
                    .Label(l => l.Content(_localizer["EMBG"]))
                    .Value(Model.EMBG)
                    .HtmlAttributes(new { @class = "form-control" })
                    .Enable(false))

            </div>
        </div>
    </div>

</div>




@Html.Partial("_JobHistoryList", ViewData["Jobs"])

